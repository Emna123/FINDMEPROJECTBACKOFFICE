{% extends 'base.html.twig' %}

    {% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body  %}

    {{ form_start (form) }}
    {% for message in app.flashes('success') %}
        <div class="col-sm-10" style="margin-left: 5%;">
            <div class="alert  alert-success alert-dismissible fade show" role="alert">
                <span class="badge badge-pill badge-success">Success</span>  &nbsp;{{ message }} .
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>


    {% endfor %}
    <br/><br/>
    <div class="container">
        <div class="container mt-200 mt-sm-5">
            <div class="col-md-4"> </span>{{ form_row(form.username) }}</div>

            <div class="col-md-4"> {{ form_row(form.password.first) }}</div>

            <div class="col-md-4">  {{ form_row(form.password.second) }}</div>
            <br/>
            <div class="col-md-4"> {{ form_row(form.nom) }}</div>
            <div class="col-md-4">{{ form_row(form.prenom) }}</div>
            <div class="col-md-4">{{ form_row(form.mail) }}</div>
            <br/>
            <div class="col-md-4">{{ form_row(form.tel) }}</div>
            <div class="col-md-4">{{ form_row(form.adresse) }}</div>



        </div>
    </div>

    <div style="position: absolute;top: 85%;left: 50%;">
        <button type="reset" class="btn btn-dark" style="width: 144.5px;"><i class="fa ti-reload" ></i>&nbsp;&nbsp;Cancel</button>
        <button type="submit" class="btn btn-secondary" style="width: 144px;"><i class="fa fa-magic" ></i>&nbsp; Add</button>
    </div>


    {{ form_end (form) }}

{% endblock %}