{% extends 'base.html.twig' %}

    {% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body  %}




    {{ form_start (form) }}


    {% for message in app.flashes('success') %}
        <div class="col-sm-10" style="margin-left: 5%;">
            <div class="alert  alert-success alert-dismissible fade show" role="alert">
                <span class="badge badge-pill badge-success">Success</span>  &nbsp;{{ message }} .
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>


    {% endfor %}



    <div class="col-lg-12 col-lg-offset-3 row"style="margin-top: 3%">
        <div class="row">
            <div class="col-md-4">{{ form_row(form.username) }}</div>

            <div class="col-md-4"> {{ form_row(form.password.first) }}</div>

            <div class="col-md-4">  {{ form_row(form.password.second) }}</div>
            <br/>
            <div class="col-md-4"> {{ form_row(form.nom) }}</div>
            <div class="col-md-4">{{ form_row(form.prenom) }}</div>
            <div class="col-md-4">{{ form_row(form.mail) }}</div>
            <br/>
            <div class="col-md-4">{{ form_row(form.tel) }}</div>
            <div class="col-md-4">{{ form_row(form.adresse) }}</div>
            <div class="col-lg-4 ">  {{ form_row(form.imageFile) }}</div >
            <div style="position: absolute;top: 130%;left: 40%;">
          <button type="submit" class="btn btn-secondary" style="width: 110px"><i class="fa fa-magic" ></i>&nbsp; Edit</button>
            <a href="{{ path('home') }}" ><button type="button" class="btn btn-dark" style="width: 110px"><i class="fa fa-hand-o-left" ></i>&nbsp;Retour</button></a>
            </div>

</div></div>

    {{ form_end(form)}}
{% endblock %}